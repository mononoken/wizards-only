<h1>Posts</h1>

<%= button_to 'Sign out', destroy_user_session_path, method: :delete %>

<ul class="posts">
  <% @posts.each do |post| %>
    <li class="post">
        <h2><%= post.title %></h2>
        <div class="user-email"><%= User.find(post.user_id).email %></div>
        <p><%= post.body %></p>
      </li>
  <% end %>
</ul>
