<h1>Posts</h1>

<%= render 'user_bar' %>

<ul class="posts">
  <% @posts.reverse.each do |post| %>
    <li class="post">
        <h2><%= post.title %></h2>
        <div class="user-email">
          <%= User.find(post.user_id).email if user_signed_in? %>
        </div>
        <p><%= post.body %></p>
      </li>
  <% end %>
</ul>
